<?xml version="1.0"?>
<config>
    <modules>
        <Magentothem_Likebox>
            <version>1.5.0.1</version>
        </Magentothem_Likebox>
    </modules>
    <frontend>
        <routers>
            <likebox>
                <use>standard</use>
                <args>
                    <module>Magentothem_Likebox</module>
                    <frontName>likebox</frontName>
                </args>
            </likebox>
        </routers>
        <layout>
            <updates>
                <likebox>
                    <file>likebox.xml</file>
                </likebox>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<likebox>
				<use>admin</use>
				<args>
					<module>Magentothem_Likebox</module>
					<frontName>likebox</frontName>
				</args>
			</likebox>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<magentothem translate="title" module="likebox">
				<title>Magentothem</title>
				<sort_order>71</sort_order>               
				<children>
					<likebox translate="title" module="likebox">
						<title>Facebook Like Box</title>
						<sort_order>20</sort_order>
						<children>
							<configuration>
								<title>Configuration</title>
								<sort_order>20</sort_order>
								<action>adminhtml/system_config/edit/section/likebox</action>
							</configuration>
						</children>
					</likebox>
				</children>
			</magentothem>
		</menu>
		<layout>
			<updates>
				<likebox>
					<file>likebox.xml</file>
				</likebox>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <likebox>
                <class>Magentothem_Likebox_Model</class>
                <resourceModel>likebox_mysql4</resourceModel>
            </likebox>
            <likebox_mysql4>
                <class>Magentothem_Likebox_Model_Mysql4</class>
                <entities>
                    <likebox>
                        <table>likebox</table>
                    </likebox>
                </entities>
            </likebox_mysql4>
        </models>
        <resources>
            <likebox_setup>
                <setup>
                    <module>Magentothem_Likebox</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </likebox_setup>
            <likebox_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </likebox_write>
            <likebox_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </likebox_read>
        </resources>
        <blocks>
            <likebox>
                <class>Magentothem_Likebox_Block</class>
            </likebox>
        </blocks>
        <helpers>
            <likebox>
                <class>Magentothem_Likebox_Helper</class>
            </likebox>
        </helpers>
    </global>
	<default>
		<likebox>
			<likebox_config>
				<enabled>1</enabled>
				<lb_url>http://www.facebook.com/pages/Magento-Themes-and-Magento-Extensions/213989125285052</lb_url>
				<lb_width>230</lb_width>
				<lb_height>300</lb_height>
				<lb_colorscheme>light</lb_colorscheme>
				<lb_faces>1</lb_faces>
				<lb_stream>0</lb_stream>
				<lb_header>0</lb_header>
                <lb_border>0</lb_border>
			</likebox_config>
		</likebox>
	</default>
</config>